<div class='signinBox'>
<%= form_with(model: order, local: true) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
        <% order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= form.label :num_meals %>
    <%= form.text_field :num_meals %>
  </div>

    <%= form.number_field :user_id, id: :order_user_id,
        value: current_user.id, type: :hidden %>
    <%= form.number_field :restaurant_id, id: :order_restaurant_id,
        value: 'Matching...', type: :hidden %>

  <div class="field">
    <%= form.label :pickup_date %>
    <%= form.text_field :pickup_date, type: :date ,
    min: :'2021-12-06', max: :'2022-12-31'%>

</div>


  <div class="actions">
    <%= form.submit :class => 'btn'%>
  </div>

<% end %>
</div>
