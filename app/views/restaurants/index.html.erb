<script>
 url_base = window.location.href;
 num = parseInt(url_base.split("=")[1]);
 if(num < 0){
   window.location.href = '/restaurant?page=0';
 }
</script>
<p id="notice"><%= notice %></p>
<head>
  <%= stylesheet_link_tag "application.css" %> </head>
<div class="restaurantWrapper">
<h1>Restaurants</h1>
  <% i = 0%>
  <% @restaurants.each do |restaurant| %>
    <% if i%3==0 %>
    <div class="card-deck" style="margin: 50px 20px 50px 20px;">
    <% end %>
  <div class="card" style="width: 18rem;">
  <img class="card-img-top" src="<%= restaurant.picture_link %>" alt="Card image cap" height="300px" width="200px">
  <%= link_to restaurant do %>
  <div class="card-body">
    <h4 class="card-title"><%= restaurant.name %></h4>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Address: <b><%= restaurant.address %></b></li>
    <li class="list-group-item">Phone:  <b><%= restaurant.phone %></b></li>
    <li class="list-group-item">Email:  <b><%= restaurant.email %></b></li>
  </ul>
  <div class="card-body">
    <p class="card-text"><%= restaurant.description %></b></p>
</div>
<% end%>
</div>
    <% if i%3==2 %>
      </div>
    <% end %>
      <% i += 1 %>
<% end %>
<% if i%3 !=0 %>
  </div>
<% end %>
<center><div>
  <%= link_to "Previous Page", restaurants_path(page: @page - 1) , :id =>'prevBut' %>
  <% if @page != @pageMax %>
  <span id='pipe'>|</span>
  <%= link_to "Next Page", restaurants_path(page: @page + 1) %>
  <% end %>
</div></center>
</div>
<script>
 if(num === 0 || url_base.split("=").length==1){
   document.getElementById('prevBut').style.display = 'none';
   document.getElementById('pipe').style.display = 'none';
 }

</script>



