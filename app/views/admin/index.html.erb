<head>
  <%= stylesheet_link_tag "application.css" %> </head>
<p id="notice"><%= notice %></p>
<div class="row" style="height:47px">

     <div class="col">
      <h1 style="text-align:left; padding-left:2%;">Admin Page</h1>
    </div> 
</div>

<div>
<div class="row"><h1 class="col-sm">Customers</h1>
<p class="col-sm btn btn-primary"><%= link_to 'New Customer', new_customer_path %></p></div>
<table>
  <thead>
    <tr>
      <th>C</th>
      <th>first_name</th>
      <th>last_name</th>
      <th>username</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= customer.first_name %></td>
        <td><%= customer.last_name %></td>
        <td><%= customer.username %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div>
<div class="row"><h1 class="col-lg">Restaurants</h1>
<p class="col-sm btn primary-button"><%= link_to 'New Restaurant', new_restaurant_path %></p></div>
<table>
  <thead>
    <tr>
      <th>R</th>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.phone %></td>
        <td><%= restaurant.email %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>
<div>
<div class="row"><h1 class="col-lg">Orders</h1>
<p class="col-sm"><%= link_to 'New Order', new_customer_path %></p></div>
<table>
  <thead>
    <tr>
      <th>O</th>
      <th>Meal description</th>
      <th>Num meals</th>
      <th>Customer</th>
      <th>Restaurant</th>
      <th>Pickup date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.o_id %></td>
        <td><%= order.meal_description %></td>
        <td><%= order.num_meals %></td>
        <td><%= order.customer_id %></td>
        <td><%= order.restaurant_id %></td>
        <td><%= order.pickup_date %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
