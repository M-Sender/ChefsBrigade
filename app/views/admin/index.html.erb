<head>
  <%= stylesheet_link_tag "application.css" %> </head>
<p id="notice"><%= notice %></p>
<div class="row" style="height:47px">

     <div class="col">
      <h1 style="text-align:left; padding-left:2%;">Admin Page</h1>
    </div> 
</div>

<div>

<div>
<div class="row"><h1 class="col-lg">Restaurants</h1>
<p class="col-sm btn primary-button"><%= link_to 'New Restaurant', new_restaurant_path %></p></div>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.phone %></td>
        <td><%= restaurant.email %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Remove', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>


<div class="row"><h1 class="col-lg">Orders</h1>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Restaurant</th>
      <th>Order id</th>
      <th>Number of meals</th>
      <th>Pickup date</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.user.username %></td>
        <td><%= order.restaurant.name %></td>    
        <td><%= order.id %></td>
        <td><%= order.num_meals %></td>
        <td><%= order.pickup_date.strftime("%m/%d/%Y, %l:%M %p") %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Remove', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>