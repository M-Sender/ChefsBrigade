<p id="notice"><%= notice %></p>

<div class="row" style="background-color:#aad4e5;color:black;">
<div  class="col-11" style="text-indent:120px;text-align:center;">
<p style="color:inherit;">
Hi, <%= current_user.first_name %>!
Here are your current orders:
</div>
</p>
</div>

<table>
  <thead>
    <tr>
       <th>Order Id</th>
       <th>Date Requested</th>
       <th>Meal description</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order|%>
    <tr>
      <td><%= order.id %></td>
      
      <td><%= order.created_at %></td>

      <td><%= order.meal_description %></td>
      </tr>
    <% end %>
  </tbody>
</table>