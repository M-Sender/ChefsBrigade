<p id="notice"><%= notice %></p>

<div class="row" style="background-color:#aad4e5;color:black;">
<div  class="col-11" style="text-indent:120px;text-align:center;">
<p style="color:inherit;">
Hi, <%= current_user.first_name %>!
Here are your current orders:
</div>
</p>
</div>

<table>
  <thead>
    <tr>
       <th>Order Id</th>
       <th>Date Requested</th>
       <th>Pickup Date</th>
       <th>Meals</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order|%>
    <tr>
      <td><%= order.id %></td>
      
      <td><%= order.created_at.strftime("%m-%d-%Y") %></td>

      <td><%= order.pickup_date.strftime("%m-%d-%Y")%></td>

      <td><%= order.num_meals%></td>

      <td><%= link_to 'Edit Order', edit_order_path(order) %></td>

      <td><%= link_to 'Cancel Order', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>




      </tr>
    <% end %>
  

  </tbody>
</table>

  <center><a href='/orders/new' class="btn btn-primary"> Submit new order </a></center>

